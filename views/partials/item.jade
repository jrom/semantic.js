article(class= item.type)
  a.ribbon(href= item.permalink)
  header
    h2
      a(href= item.permalink)= item.title
    ul.metadata
      li.meta.author= item.author
      li.meta.comments
        a(href= item.permalink)
          = (item.comments && item.comments.length) || 0
          if (item.comments && item.comments.length === 1)
            |  comentari
          else
            |  comentaris
      li.meta.date
        date(datetime=moment(item.created_at).format('DD-MM-YY'))= moment(item.created_at).fromNow()
      li.meta.tags
        a(href="#") #SEO
        a(href="#") #socialmedia

  .body!= markdown.parse(item.body)
